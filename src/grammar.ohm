KK {
  Program = Expression*
  Expression
  	= string -- raw
    | VariableDeclaration
    | FunctionCall
    | Mapping
    | VariableRef
  VariableRef = name
  Mapping = "{" (name ":" Expression)* "}"
  VariableDeclaration = name "=" Expression
  FunctionCall = name "(" ListOf<Expression, ","> ")"

  // primitives
  name = (alnum | "_" | "." | "@" | "*" | "~")+
  string = "\"" (~"\"" any)* "\""
}
